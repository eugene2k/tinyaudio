// Project-local debug tasks
//
// For more documentation on how to configure debug tasks,
// see: https://zed.dev/docs/debugger
[
  {
    "label": "Attach and Debug Program",
    "request": "attach",
    "adapter": "CodeLLDB",
    "pid": "$ZED_PICK_PID",
  },
  {
    "label": "Launch and Debug Program",
    "request": "launch",
    "adapter": "CodeLLDB",
    "program": "build/tinyaudio",
    "args": [
      "play",
      "https://stream.synthwaveradio.eu/listen/synthwaveradio.eu/radio.mp3",
    ],
    "initCommands": ["settings set target.process.follow-fork-mode child"],
  },
]
